@{
    ViewBag.Title = "NewProductType";
}


@using MVCTrainningSample.Models;
@model ProductType

<div id="divNewProductTypeDetail">
    <div class="col-lg-12">
        @using (Html.BeginForm("SaveProductType", "Home", FormMethod.Post, new { @class = "form-horizontal", id = "frmEditProductType" }))
        {
            <div class="panel-body">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label for="lblProductName" class="col-sm-3 control-label">Name</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(p => p.Name, new { @class = "form-control", id = "txtEditProductTypeName" })
                            @Html.HiddenFor(p => p.Id, new { id = "hidEditProductTypeID" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="lblProductName" class="col-sm-3 control-label">Description</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(p => p.Description, new { @class = "form-control", id = "txtEditProductTypeDesc" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="lblProductName" class="col-sm-3 control-label">Is Active</label>
                        <div class="col-sm-9">
                            @Html.CheckBoxFor(p => p.IsActive, new { @class = "", id = "chkEditProductTypeIsActive" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        
    })
</script>